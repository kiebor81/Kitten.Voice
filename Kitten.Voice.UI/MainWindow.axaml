<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Kitten.Voice.UI.MainWindow"
        Title="Kitten.Voice Test UI"
        Width="1180"
        Height="760"
        MinWidth="920"
        MinHeight="620">
  <Grid ColumnDefinitions="1*,1*" RowDefinitions="Auto,*,Auto" Margin="16">
    <Border Grid.ColumnSpan="2" Background="#1F2937" CornerRadius="10" Padding="14" Margin="0,0,0,12">
      <StackPanel>
        <TextBlock Text="Kitten.Voice Test UI" FontSize="22" FontWeight="Bold" />
        <TextBlock Text="Simple testing: plain text playback and SSML builder playback." Opacity="0.85" />
      </StackPanel>
    </Border>

    <Border Grid.Row="1" Grid.Column="0" Background="#111827" CornerRadius="10" Padding="12" Margin="0,0,12,0">
      <Grid RowDefinitions="Auto,Auto,*,Auto">
        <TextBlock Text="Text Input" FontSize="18" FontWeight="Bold" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,8" Spacing="8">
          <TextBlock Text="Voice" VerticalAlignment="Center" />
          <ComboBox x:Name="VoiceComboBox" Width="220" />
          <TextBlock Text="Speed" VerticalAlignment="Center" Margin="8,0,0,0" />
          <ComboBox x:Name="PlainSpeedComboBox" Width="110" />
        </StackPanel>

        <TextBox Grid.Row="2"
                 x:Name="PlainTextBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Watermark="Type plain text to synthesize..."
                 VerticalContentAlignment="Top" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
          <Button Content="Send To Play" Width="120" Click="PlayTextButton_OnClick" />
        </StackPanel>
      </Grid>
    </Border>

    <Border Grid.Row="1" Grid.Column="1" Background="#111827" CornerRadius="10" Padding="12">
      <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto">
        <TextBlock Text="SSML Builder" FontSize="18" FontWeight="Bold" />

        <Grid Grid.Row="1" Margin="0,10,0,0" ColumnDefinitions="Auto,*,Auto,*">
          <TextBlock Grid.Column="0" Text="Voice" VerticalAlignment="Center" Width="68" />
          <ComboBox Grid.Column="1" x:Name="BuilderVoiceComboBox" Margin="0,0,8,0" />
          <TextBlock Grid.Column="2" Text="Emotion" VerticalAlignment="Center" Width="68" Margin="8,0,0,0" />
          <ComboBox Grid.Column="3" x:Name="EmotionComboBox" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,8,0,0" ColumnDefinitions="Auto,*,Auto,*">
          <TextBlock Grid.Column="0" Text="Intensity" VerticalAlignment="Center" Width="68" />
          <ComboBox Grid.Column="1" x:Name="IntensityComboBox" Margin="0,0,8,0" />
          <TextBlock Grid.Column="2" Text="Rate" VerticalAlignment="Center" Width="68" Margin="8,0,0,0" />
          <ComboBox Grid.Column="3" x:Name="RateComboBox" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,8,0,0" ColumnDefinitions="Auto,*,Auto,*">
          <TextBlock Grid.Column="0" Text="Pitch" VerticalAlignment="Center" Width="68" />
          <ComboBox Grid.Column="1" x:Name="PitchComboBox" Margin="0,0,8,0" />
          <TextBlock Grid.Column="2" Text="Volume" VerticalAlignment="Center" Width="68" Margin="8,0,0,0" />
          <ComboBox Grid.Column="3" x:Name="VolumeComboBox" />
        </Grid>

        <TextBlock Grid.Row="4" Text="Builder Text" Margin="0,10,0,4" />
        <TextBox Grid.Row="5"
                 x:Name="BuilderTextBox"
                 Height="110"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Top"
                 Watermark="Type the text to wrap in SSML..." />

        <TextBlock Grid.Row="6" Text="SSML Preview" Margin="0,10,0,4" />
        <TextBox Grid.Row="7"
                 x:Name="SsmlPreviewTextBox"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Top" />

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="8">
          <Button Content="Generate SSML" Click="GenerateSsmlButton_OnClick" />
          <Button Content="Send To Play" Click="PlaySsmlButton_OnClick" />
        </StackPanel>
      </Grid>
    </Border>

    <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0" Background="#1F2937" CornerRadius="8" Padding="10">
      <TextBlock x:Name="StatusTextBlock" Text="Ready." />
    </Border>
  </Grid>
</Window>
